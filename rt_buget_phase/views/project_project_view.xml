<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_edit_project_form_inherit_form_budget" model="ir.ui.view">
        <field name="name">project.project.form.inherit.forms.budget</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_phase']" position="before">
                <field name="budget_count" invisible="1"/>
                <button class="oe_stat_button" name="action_view_budget" type="object" icon="fa-dollar" groups="project.group_project_milestone" invisible="budget_count == 0">
                    <field name="budget_count" widget="statinfo" string="Budgets"/>
                </button>
            </xpath>
            <xpath expr="//button[@name='create_project_budget']" position="before">
                <field name="phases_budgets_all" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='create_project_budget']" position="attributes">
                <attribute name="invisible">phases_budgets_all == True</attribute>
            </xpath>
        </field>
    </record>

</odoo>

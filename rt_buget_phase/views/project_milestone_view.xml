<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="project_milestone_view_form_phase_inherit" model="ir.ui.view">
        <field name="name">project.milestone.form.phase.inherit</field>
        <field name="model">project.milestone</field>
        <field name="inherit_id" ref="project.project_milestone_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_reached']" position="after">
                <field name="currency_id" invisible="True"/>
                <field name="order_id"/>
                <field name="amount" widget="monetary"/>
            </xpath>
        </field>
    </record>
    <record id="project_milestone_view_tree_phase_inherit" model="ir.ui.view">
        <field name="name">project.milestone.view.tree.phase.inherit</field>
        <field name="model">project.milestone</field>
        <field name="inherit_id" ref="project.project_milestone_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_reached']" position="after">
                <field name="currency_id" column_invisible="True"/>
                <field name="order_id"/>
                <field name="amount" widget="monetary" optional="show" sum="Total Amount"/>
            </xpath>
        </field>
    </record>


        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="project_milestone_action_window">
            <field name="name">Project Milestone</field>
            <field name="res_model">project.milestone</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Project Milestone
                </p>
                <p>
                    The Project Milestone in system allows you to create milestone.
                </p>
            </field>
        </record>

        <!-- Top menu item -->
        <!-- menu categories -->
        <menuitem name="Milestones" id="project_milestones_menu"
                  parent="project.menu_main_pm"
                  sequence="151"
        />
        <!-- actions -->
        <!-- menu -->
        <menuitem name="Milestones"
                  id="project_milestones"
                  parent="project_milestones_menu"
                  sequence="0"
                  action="project_milestone_action_window"/>
</odoo>

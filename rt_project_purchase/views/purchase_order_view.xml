<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_purchase_order_form_project_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.project.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="project_id" readonly="state not in ('draft','sent')" force-save="1"/>
            </xpath>
        </field>
    </record>
</odoo>

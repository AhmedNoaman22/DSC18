<odoo>
    <data>

        <record id="project_task_visibility_rule" model="ir.rule">
            <field name="name">Task Visibility by Department</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="domain_force">['|','|','|',('department_id', '=', user.employee_id.department_id.id),('user_ids', 'in', [user.id]),('parent_id.department_id', '=', user.employee_id.department_id.id),('parent_id.user_ids', 'in', [user.id])]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>

    </data>
</odoo>

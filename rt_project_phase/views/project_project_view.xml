<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_edit_project_form_inherit_form" model="ir.ui.view">
        <field name="name">project.project.form.inherit.forms</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_tasks']" position="before">
                <button class="oe_stat_button" name="action_view_phase" type="object" icon="fa-check-square-o" groups="project.group_project_milestone">
                    <field name="phase_count" widget="statinfo" string="Phases"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>

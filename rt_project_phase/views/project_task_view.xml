<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_task_form2_inherit_form" model="ir.ui.view">
        <field name="name">project.task.form.inherit.forms</field>
        <field name="model">project.task</field>
        <field eval="2" name="priority"/>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='milestone_id']" position="before">
                <field name="phase_id"/>
            </xpath>
            <xpath expr="//field[@name='milestone_id']" position="attributes">
                <attribute name="domain">[('project_id','=',project_id),('phase_id','=',phase_id)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>

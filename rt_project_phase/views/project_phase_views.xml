<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="view_project_phase_list">
            <field name="name">project.phase.list</field>
            <field name="model">project.phase</field>
            <field name="arch" type="xml">
                <list>
                    <field name="ph_reference"/>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="company_id" force_save="1"/>
                </list>
            </field>
        </record>

        <!-- explicit search view definition -->
        <record model="ir.ui.view" id="view_project_phase_search">
            <field name="name">project.phase.search</field>
            <field name="model">project.phase</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Phase Name" filter_domain="['|','|','|',('name','ilike',self),('ph_reference','ilike',self),('project_id','ilike',self),('company_id','ilike',self)]"/>
                    <field name="ph_reference"/>
                    <field name="project_id"/>
                    <field name="company_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Company" name="group_by_company_id" domain="" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- project phase form view -->
        <record id="view_project_phase_form" model="ir.ui.view">
            <field name="name">project.phase.form</field>
            <field name="model">project.phase</field>
            <field name="arch" type="xml">
                <form string="Project Phase">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="action_view_project" type="object"
                                    icon="fa-puzzle-piece" groups="project.group_project_milestone">
                                <field name="project_id" invisible="1"/>
                                <label for='project_id' name="project" widget="statinfo" string="Project"/>
                            </button>
                            <button class="oe_stat_button" name="action_view_order" type="object"
                                    icon="fa-dollar"
                                    groups="project.group_project_milestone">
                                <field name="order_count" widget="statinfo" string="Order"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1 class="d-flex">
                                <field name="ph_reference" force_save="1"/>
                            </h1>
                            <label for="name"/>
                            <h1 class="d-flex">
                                <field name="name" force_save="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="project_id"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="tasks" string="Tasks">
                                <field
                                        name="task_ids"
                                        widget="section_and_note_one2many"
                                        mode="list,kanban"
                                >
                                    <list string="Tasks Lines" create="0" edit="0" delete="0">
                                        <field name="name"/>
                                        <field name="project_id"/>
                                        <field name="stage_id"/>
                                    </list>
                                </field>
                            </page>
                            <page name="milestones" string="Milestones">
                                <field name="milestone_ids" widget="section_and_note_one2many" mode="list,kanban">
                                    <list string="Milestones Lines" create="0" edit="0" delete="0">
                                        <field name="name"/>
                                        <field name="deadline"/>
                                        <field name="is_reached"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- project phase kanban view -->
        <record model="ir.ui.view" id="project_phase_kanban">
            <field name="name">project.phase.kanban</field>
            <field name="model">project.phase</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1">
                    <field name="ph_reference"/>
                    <field name="name"/>
                    <field name="project_id"/>
                    <progressbar field="activity_state"
                                 colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb8">
                                    <div class="o_kanban_record_headings ms-1">
                                        <strong class="o_kanban_record_title">
                                            <span>
                                                <t t-esc="record.name.value"/>
                                            </span>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="project_id"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="project_phase_action_window">
            <field name="name">Project Phase</field>
            <field name="res_model">project.phase</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Project Phase
                </p>
                <p>
                    The Project Phase in system allows you to create Phase.
                </p>
            </field>
        </record>

        <!-- Top menu item -->
        <!-- menu categories -->
        <menuitem name="Phases" id="project_phase_menu"
                  parent="project.menu_main_pm"
                  sequence="150"
        />
        <!-- actions -->
        <!-- menu -->
        <menuitem name="Project Phases"
                  id="project_phase"
                  parent="project_phase_menu"
                  sequence="0"
                  action="project_phase_action_window"/>
    </data>
</odoo>
